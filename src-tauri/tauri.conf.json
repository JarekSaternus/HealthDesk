{
  "$schema": "https://raw.githubusercontent.com/nicegui/tauri-v2-schema/main/tauri.conf.json",
  "productName": "HealthDesk",
  "version": "2.0.0",
  "identifier": "app.healthdesk",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "HealthDesk",
        "width": 900,
        "height": 620,
        "minWidth": 800,
        "minHeight": 550,
        "center": true,
        "decorations": true,
        "resizable": true,
        "visible": true,
        "label": "main"
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "id": "main-tray"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "languages": ["Polish", "English"]
      }
    }
  },
  "plugins": {}
}
